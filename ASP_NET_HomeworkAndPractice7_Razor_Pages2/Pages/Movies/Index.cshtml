@model ASP_NET_HomeworkAndPractice7_Razor_Pages2.Pages.Movies.IndexModel
@{
}

<h1>Cinema</h1>
<div class="container">
    <div>
        @* <a href="/movies/create1">Add movie</a> *@
        <a asp-page="Create1">Add movie</a>
    </div>
    <div class="row">
        <div class="col">
            <form method="get">
                <div class="row align-items-center" style="padding: 10px;">
                    @* Search by title *@
                    <div class="col-auto">
                        <label class="col-form-label">By title</label>
                    </div>
                    <div class="col-auto">
                        <input asp-for="TitleSearch" class="form-control" />
                        @* <input name="titleSearch" class="form-control" /> *@
                    </div>
                    @* Search by director *@
                    <div class="col-auto">
                        <label class="col-form-label">By director</label>
                    </div>
                    <div class="col-auto">
                        <input asp-for="DirectorSearch" class="form-control" />
                        @* <input name="directorSearch" class="form-control" /> *@
                    </div>
                    @* Search by style *@
                    @* <div class="col-auto"> *@
                    @*     <label class="col-form-label">By style</label> *@
                    @* </div> *@
                    @* <div class="col-auto"> *@
                    @*     <input name="styleSearch" class="form-control" /> *@
                    @* </div> *@

                    <div class="col-auto">
                        <button type="submit" class="btn btn-outline-primary">Find</button>
                    </div>

                </div>
            </form>
        </div>
    </div>
    @foreach (var movie in Model.Movies)
    {
        <div class="card w-100 mb-3">
            <div class="card-body">
                <h5 class="card-title">@movie.Title</h5>
                <div>
                    <p class="card-text">Director: @movie.Director</p>
                    <p class="card-text">Style: @movie.Style</p>
                    <p class="card-text">Description: @movie.Description</p>
                    <p class="card-text">Sessions: @movie.Sessions</p>
                </div>
                @* <a href="/movies/edit/@movie.Id" class="btn btn-primary">Edit</a> *@
                <a asp-page="Edit" asp-route-id="@movie.Id" class="btn btn-primary">Edit</a>
                <form method="post" style="display: inline">
                    <input type="hidden" name="id" value="@movie.Id" />
                    <button type="submit" class="btn btn-warning">Delete</button>
                    @* <a href="/movies/delete/@movie.Id">Delete with confirmation</a> *@
                    <a asp-page="Delete" asp-route-id="@movie.Id">Delete with confirmation</a>
                </form>
            </div>
        </div>
    }
</div>